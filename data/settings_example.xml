<?xml version="1.0"?>
<!-- /!\ Fichier à renommer "settings.xml" avant de lancer le programme -->
<settings>
	<render>
		<!-- dimensions de l'affiche format PNG, 1080 x 1080 pour instagram -->
		<resolution width="1080" height="1080"/>
	</render>
	<club>
		<name>
			<!-- différentes formes du nom du club utilisées
				 pour engager les équipes, se retrouvent sur Gest'Hand.
				 
				 /!\ ATTENTION aux accents et aux majuscules / minuscules, 
				 créer plusieurs variants si des équipes ont été engagées avec et sans les accents !
				 
				 Si le nom du club est long, on peut en utiliser qu'une portion
				 Exemple : 
					- nom utilisé : "Ville Haute Ville Basse Handball M18G" 
					- nameVariant : "Ville Haute Ville Basse" -->
			<nameVariant>Mon Club Handball</nameVariant>
			<nameVariant>MONCLUB HB</nameVariant>
			<nameVariant>monclub hand</nameVariant>
			<!-- Si le logiciel identifie à tort une équipe avec un nom ressemblant
				 comme faisant partie de votre club, vous pouvez ajouter ici des 
				 mots à ignorer 
				 
				 /!\ ATTENTION aux accents et aux majuscules / minuscules
				 
				 Exemple :
					- nom utilisé : "Ville Haute Ville Basse Handball M18G"
					- nameVariant : "Ville Haute Ville Basse"
					- autre club : "Entente Ville Haute Ville Basse Sporting Club"
					- ignore : "Sporting"
					- ignore : "Entente"
				 -->
			<ignore>autre club avec nom ressemblant</ignore>
		</name>
		<colors>
			<!-- les 5 couleurs à utiliser pour les affiches, 
				 la couleur avec l'id 0 sera la plus présente, puis l'id 1 etc.-->
			<color id = "0" r="255" g="000" b="000"/>
			<color id = "1" r="255" g="255" b="255"/>
			<color id = "2" r="000" g="000" b="000"/>
			<color id = "3" r="064" g="064" b="064"/>
			<color id = "4" r="180" g="180" b="180"/>
		</colors>
		<!-- logo du club à placer dans le même répertoire que ce fichier -->
		<logo>logo_example.png</logo>
		<background mode="0">background0_example.png</background>
		<background mode="1">background1_example.png</background>
	</club>
</settings>